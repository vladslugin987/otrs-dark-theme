{
  "manifest_version": 3,
  "name": "The Dark Theme for OTRS by V. Slugin",
  "version": "1.2",
  "description": "Adds a dark theme for OTRS by V. Slugin (vsdev.).",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
    "web_accessible_resources": [
        {
            "resources": ["dark-theme.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["*://itsm.devoteam.de/*"],
            "js": ["content.js"],
            "css": ["dark-theme.css"]
        }
    ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
